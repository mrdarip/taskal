<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Taskal</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Taskal</h1>
  
  <% if (error === 'no_config') { %>
    <div class="error-box">
      <strong>Configuration Pending</strong><br>
      Not connected to Google Calendar yet.<br>
      <a href="<%= adminUrl %>">Go to admin panel</a>
    </div>
  <% } else if (error === 'calendar_error') { %>
    <div class="error-box">
      <strong>Error loading events</strong><br>
      Could not load events from Google Calendar.<br>
      <a href="<%= adminUrl %>">Check configuration</a>
    </div>
  <% } %>
  
  <% if (sortedDays.length === 0 && !error) { %>
    <div class="no-events">
      <p>No events!</p>
    </div>
  <% } %>
  
  <% sortedDays.forEach(function(dateKey) { %>
    <% const dayData = eventsGroupedByDate[dateKey]; %>
    <section class="day-group" id="day-<%= dateKey %>">
      <h2 class="day-title"><%= dateKey %> - <%= dayData.relDisplayDate %></h2>
      <div class="table-wrap">
        <table class="task-table">
          <thead>
            <tr>
              <th>Tarea</th>
              <th>Inicio</th>
              <th>Mins</th>
              <th colspan="2">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% dayData.events.forEach(function(event) { %>
              <tr>
                <td class="task-name"><%= event.title %></td>
                <td class="task-meta"><%= event.time || '' %></td>
                <td class="task-meta"><%= event.duration %></td>
                <td class="task-meta">
                  <a href="http://localhost:5678/webhook/api/simplestart?id=<%= event.id %>" class="btn-start">start</a>
                </td>
                <td class="task-meta">
                  <a href="http://localhost:5678/webhook/api/simplefinish?id=<%= event.id %>" class="btn-end">end</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>
  <% }); %>
  
  <div class="footer">
    Taskal
  </div>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Taskal</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <script>
    function startEvent(eventId) {
      var xhr = new XMLHttpRequest();
      xhr.open('POST', '/api/start', true);
      xhr.setRequestHeader('Content-Type', 'application/json');
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            var response = JSON.parse(xhr.responseText);
            console.log('Event started:', response.event);
            location.reload(); // Reload the page to reflect changes
          } else {
            console.error('Error starting event:', xhr.responseText);
            alert('Error starting event: ' + xhr.responseText);
          }
        }
      };
      xhr.send(JSON.stringify({ eventId: eventId }));
    }

    function endEvent(eventId) {
      var xhr = new XMLHttpRequest();
      xhr.open('POST', '/api/finish', true);
      xhr.setRequestHeader('Content-Type', 'application/json');
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            var response = JSON.parse(xhr.responseText);
            console.log('Event ended:', response.event);
            location.reload(); // Reload the page to reflect changes
          } else {
            console.error('Error ending event:', xhr.responseText);
            alert('Error ending event: ' + xhr.responseText);
          }
        }
      };
      xhr.send(JSON.stringify({ eventId: eventId }));
    }
  </script>
  <h1>Taskal</h1>
  
  <% if (error === 'no_config') { %>
    <div class="error-box">
      <strong>Configuration Pending</strong><br>
      Not connected to Google Calendar yet.<br>
      <a href="<%= adminUrl %>">Go to admin panel</a>
    </div>
  <% } else if (error === 'calendar_error') { %>
    <div class="error-box">
      <strong>Error loading events</strong><br>
      Could not load events from Google Calendar.<br>
      <a href="<%= adminUrl %>">Check configuration</a>
    </div>
  <% } %>
  
  <% if (sortedDays.length === 0 && !error) { %>
    <div class="no-events">
      <p>No events!</p>
    </div>
  <% } %>
  
  <% sortedDays.forEach(function(dateKey) { %>
    <% const dayData = eventsGroupedByDate[dateKey]; %>
    <section class="day-group" id="day-<%= dateKey %>">
      <h2 class="day-title"><%= dateKey %> - <%= dayData.relDisplayDate %></h2>
      <div class="table-wrap">
        <table class="task-table">
          <thead>
            <tr>
              <th colspan="2">Actions</th>
              <th>Task</th>
              <th>Start</th>
              <th>Mins</th>
            </tr>
          </thead>
          <tbody>
            <% dayData.events.forEach(function(event) { %>
              <tr>
                <td class="task-meta btn-start">
                  <button onClick="startEvent('<%= event.id %>')">start</button>
                </td>
                <td class="task-meta btn-end">
                  <button onClick="endEvent('<%= event.id %>')">end</button>
                </td>
                <td class="task-name"><%= event.title %></td>
                <td class="task-meta"><%= event.time || '' %></td>
                <td class="task-meta"><%= event.duration %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>
  <% }); %>
  
  <div class="footer">
    Taskal
  </div>
</body>
</html>
